select,
button
  cursor pointer

select:focus,
button:focus,
input:focus,
textarea:focus
  outline none

button
  text-shadow 0 0 5px rgba(0, 0, 0, 0.2)
  background #1abc9c
  border none
  border-bottom 3px solid black
  border-radius 10px
  color white
  font-size 1.5rem
  font-family inherit
  padding .5rem 1rem
  transition .2s all
  font-weight 700
  &:hover
      background #16a085
  &:active
      transform scale(.9)
  i
      margin 0 5px

input,
textarea
  border-radius 5px
  border none
  font-family inherit
  font-size 1rem
  padding 1rem

select
  font-size 1rem
  border-radius 5px
  border none
  padding .5rem
  font-family inherit
  font-weight bold
  text-transform uppercase