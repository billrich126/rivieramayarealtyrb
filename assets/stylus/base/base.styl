*,
*:before,
*:after
  box-sizing border-box
  margin 0

html
  font-family "Poppins", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif
  font-size 16px
  word-spacing 1px
  box-sizing border-box

a
  color inherit
  text-decoration none

img
  max-width 100%

.container
  max-width 1200px
  margin 0 auto